<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mlab.quizapp.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ball"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hi..!! Welcome to quizApp. "
            android:textColor="#F2D7D5"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_marginTop="26dp"
            android:text="Choose from the cartagory below "
            android:textColor="#F2D7D5"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:text="Let's Start!"
            android:textAlignment="center"
            android:textColor="#F4ECF7"
            android:textSize="25sp" />


        <Button
            android:id="@+id/historyBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/history5"
            android:fontFamily="cursive"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:layout_above="@+id/sportBtn"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="48dp"
            android:layout_marginEnd="48dp" />

        <Button
            android:id="@+id/sportBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/sport6"
            android:fontFamily="casual"
            android:onClick="gotoSportActivity"
            android:text="Sport"
            android:textColor="#ffff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="99dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/mathsBtn"
            android:layout_toEndOf="@+id/mathsBtn" />

        <Button
            android:id="@+id/mathsBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/maths5"
            android:fontFamily="monospace"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/textView3"
            android:layout_toStartOf="@+id/textView3" />
    </RelativeLayout>


</LinearLayout>
