<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sport"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sport"
    tools:context="com.mlab.quizapp.SportActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/choice2"
            android:layout_below="@+id/score"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="74dp"
            android:gravity="center"
            android:text="The first soccer team to win the world cup?"
            android:textColor="#ffff"
            android:textSize="20sp" />



        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:text="0"
            android:textColor="#ffff"
            android:textSize="30dp" />

        <Button
            android:id="@+id/choice1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#89273492"
            android:text="uruguay"
            android:layout_marginBottom="5dp"
            android:textColor="#ffff"
            android:layout_above="@+id/choice3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />




        <Button
            android:id="@+id/choice3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/choice4"
            android:layout_marginBottom="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#8925"
            android:text="Usain Bolt"
            android:textColor="#ffff" />

        <Button
            android:id="@+id/choice4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ff00"
            android:text="cricket"
            android:textColor="#ffff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/choice2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button"
            android:layout_marginBottom="5dp"
            android:background="#7234"
            android:textColor="#fff"
            android:layout_above="@+id/choice1"
            android:layout_alignRight="@+id/score"
            android:layout_alignEnd="@+id/score" />


    </RelativeLayout>


</LinearLayout>
